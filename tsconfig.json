{
  "compileOnSave": false,
  "compilerOptions": {
    "jsx": "react-jsx",
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@sf-fe/lib/*": ["libs/*"],
      "@sf-fe/rootStore/*": ["rootStore/*"],
      "@sf-fe/shared": ["libs/shared/src/index.ts"],
      "@sf-fe/shared/types": ["libs/shared/src/types/index.ts"],
      "@sf-fe/ui": ["libs/ui/src/index.ts"],
      "@sf-fe/ui/types": ["libs/ui/src/types/types.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
